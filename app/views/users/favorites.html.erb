<h2 class="mb-5 text-center text-success fw-bold display-6">
  保存したメシ一覧
</h2>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% @favorite_posts.each do |post| %>
    <div class="col">
      <div class="card h-100 shadow-sm border-0">
        <% if post.image.attached? %>
          <%= image_tag post.image, class: "card-img-top", style: "object-fit: cover; height: 200px;" %>
        <% else %>
          <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px; color: #aaa;">
            画像なし
          </div>
        <% end %>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-2">
            <%= link_to post.title, post_path(post), class: "text-decoration-none text-dark fw-bold" %>
          </h5>
          <p class="card-text mb-2"><i class="bi bi-shop"></i> 店舗: <%= post.store %></p>
          <p class="card-text mb-3"><i class="bi bi-fire"></i> カロリー: <%= post.calorie %> kcal</p>

          <%= button_to 'お気に入り解除', post_favorite_path(post),
                method: :delete,
                remote: true,
                id: "favorite-btn-#{post.id}",
                class: "btn btn-outline-danger btn-sm mt-auto" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
