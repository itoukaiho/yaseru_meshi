<h2 class="mb-4 text-center text-primary fw-bold">アカウント情報の編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "p-4 bg-light rounded shadow-sm mx-auto", style: "max-width: 500px;" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label fw-semibold" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-info text-center mb-3">
      現在、以下のメールアドレスの確認待ちです: <strong><%= resource.unconfirmed_email %></strong>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, "新しいパスワード", class: "form-label fw-semibold" %>
    <small class="text-muted">(変更しない場合は空のまま)</small>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">（<%= @minimum_password_length %>文字以上）</small>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "パスワード確認", class: "form-label fw-semibold" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= f.label :current_password, "現在のパスワード", class: "form-label fw-semibold" %>
    <small class="text-muted">(変更を反映するには必須)</small>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="d-grid mb-3">
    <%= f.submit "更新する", class: "btn btn-primary fw-bold" %>
  </div>
<% end %>

<div class="text-center mt-4">
  <%= button_to "アカウントを削除する", registration_path(resource_name), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger fw-bold" %>
</div>

<div class="text-center mt-3">
  <%= link_to "戻る", request.referer || root_path, class: "btn btn-outline-secondary" %>
</div>
