<h2 class="mb-4 text-center text-primary fw-bold">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@example.com", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワードを入力", required: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
    </div>
  <% end %>

  <div class="d-grid mb-3">
    <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="d-grid mb-3">
  <%= button_to 'ゲストログイン', guest_sign_in_path, method: :post, class: 'btn btn-outline-success btn-lg' %>
</div>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>

